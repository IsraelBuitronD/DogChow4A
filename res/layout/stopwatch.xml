<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:colorBackground="#000">	
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal">
		<TextView android:id="@+id/displayMinutes"
			android:textSize="34pt" 
			android:textColor="#fff" android:text="00" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"/>
		<TextView 
			android:textSize="34pt" 
			android:textColor="#fff" android:text=":" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"/>
		<TextView android:id="@+id/displaySeconds" 
			android:textSize="34pt" 
			android:textColor="#fff" android:text="00"
			android:layout_marginLeft="@null" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"/>
		<TextView 
			android:textSize="34pt" 
			android:textColor="#fff" android:text="." 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"/>
		<TextView android:id="@+id/displayMillis" 
			android:textSize="34pt" 
			android:textColor="#fff" android:text="0"
			android:layout_marginLeft="@null" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"/>
	</LinearLayout>
	
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingTop="0dip">
		<Button android:id="@+id/start_button" 
			android:layout_weight="2"
			android:text="Start" 
			android:textSize="30sp"
			android:layout_height="80dip" 
			android:layout_width="wrap_content"/>

		<TextView android:layout_height="1sp" 
			android:layout_width="wrap_content"/>

		<Button android:id="@+id/reset_button" 
			android:layout_weight="3"
			android:text="Reset" android:textSize="30sp" 
			android:layout_height="80dip"
			android:colorBackground="#00ffff" 
			android:layout_width="wrap_content"/>
	</LinearLayout>
	
	<ListView
		android:id="@+id/list"
		android:layout_height="fill_parent"
		android:layout_width="wrap_content"
		android:stackFromBottom="false"
		 />
	
</LinearLayout>
