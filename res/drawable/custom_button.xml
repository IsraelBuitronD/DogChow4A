<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/dimgray1"
                android:endColor="@color/dimgray2"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/lightSteelBlue" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/gray1"
                android:startColor="@color/gray2"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/lightSteelBlue" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="@color/lightGray1"
                android:startColor="@color/lightGray2"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/lightSteelBlue" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>
